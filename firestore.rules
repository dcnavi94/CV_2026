rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Cursos: lectura p√∫blica, solo admin puede escribir
    match /courses/{courseId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "icarapia94@gmail.com";
    }

    // Usuarios: cada usuario puede leer/escribir su propio doc
    // Admin puede leer y escribir todos los usuarios
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.email == "icarapia94@gmail.com");
      allow write: if request.auth != null && (request.auth.uid == userId || request.auth.token.email == "icarapia94@gmail.com");
      
      // Subcolecciones (progreso de cursos, etc.)
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
  }
}
